export ZSH="${HOME}/.oh-my-zsh"


{{ if eq .chezmoi.os "darwin" -}}
ZSH_THEME="random"
{{ else if eq .chezmoi.os "linux" -}}
ZSH_THEME="random"
{{ end -}}

ZSH_THEME_RANDOM_IGNORED=("agnoster")
